{
	"name": "react-render-measurement-tool",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"main": "./dist/cjs/index.js",
	"module": "./dist/esm/index.js",
	"types": "./dist/types/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/types/index.d.ts",
			"require": "./dist/cjs/index.js",
			"import": "./dist/esm/index.js",
			"default": "./dist/esm/index.js"
		},
		"./setup": {
			"types": "./dist/types/setup.d.ts",
			"require": "./dist/cjs/setup.js",
			"import": "./dist/esm/setup.js",
			"default": "./dist/esm/setup.js"
		}
	},
	"scripts": {
		"build": "tsc -b ./tsconfig.cjs.json ./tsconfig.esm.json ./tsconfig.types.json",
		"test": "vitest",
		"lint": "biome lint",
		"format": "biome format --write",
		"check": "biome check",
		"check:apply": "biome check --apply"
	},
	"dependencies": {
		"react-devtools-core": "^6.0.1"
	},
	"peerDependencies": {
		"@testing-library/react": "^16.0.1",
		"react": "^18"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@testing-library/user-event": "^14.5.2",
		"@types/node": "^22.7.7",
		"@types/react": "^18.3.11",
		"jsdom": "^25.0.1",
		"lefthook": "^1.8.2",
		"typescript": "^5.6.3",
		"vite": "^5.4.10",
		"vitest": "^2.1.1"
	}
}
