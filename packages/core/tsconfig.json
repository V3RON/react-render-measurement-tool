{
	"include": ["src"],
	"exclude": ["**/*.test.ts"],
	"compilerOptions": {
		"module": "esnext",
		"target": "esnext",
		"lib": ["esnext", "dom"],
		"jsx": "react-jsx",
		"declaration": true,
		"strict": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"outDir": "dist",
		"rootDir": "src"
	}
}
